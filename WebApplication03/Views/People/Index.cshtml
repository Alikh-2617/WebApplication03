@model List<Person>

@{
    ViewData["Title"] = "People";
}

<h1>People</h1>
<hr />
<br />

<p>
    <a class="btn btn-info" asp-action="Create">Create New Person </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Age
            </th>
            <th>
                Phone Number
            </th>
            <th>
                Register Date
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var person in Model)
        {
            <tr>
                <td>@person.Name</td>
                <td>@person.Age</td>
                <td>@person.PhoneNumber</td>
                <td>@person.Register</td>
                <td>
                    <a class="btn btn-success" asp-action="Edit" asp-route-id="@person.Id">Edit</a> |
                    <a class="btn btn-info" asp-action="AddLanguage" asp-route-id="@person.Id">Add language to person</a> |
                    <a class="btn btn-info" asp-action="FetchLanguage" asp-route-id="@person.Id">language he speak</a> |
                    @if (User.IsInRole("Admin"))
                    {
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@person.Id">Delete</a>
                        @* Vi kan lägga funktionen Delete i en annan controller som bara Admin kan komma åt också Vid Behöv*@
                    }

                </td>
            </tr>
        }
    </tbody>
</table>
