@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "Show All Roles";
}

<h1>Show All Roles</h1>
<a asp-action="AddRoleToUser" class="btn btn-primary">Create New Role</a>
<hr />
<br />

<h3>@ViewBag.Message</h3>
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var role in Model)
        {
            <tr>
                <th>@role.Id</th>
                <th>@role.Name</th>
                <th><a asp-action="DeleteRole" asp-route-id="@role.Id" class="btn btn-danger">Delete</a>  </th>
            </tr>
        }
    </tbody>
</table>