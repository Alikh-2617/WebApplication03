@model IEnumerable<ApplicationUser>
@{
    ViewData["Title"] = "Show All Users";
}

<h1>Show All Users</h1>
<hr />
<br />
<table class="table">
    <thead>
        <tr>
            <th>Email</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Age</th>
            <th>Register Date</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach(var user in Model){
            <tr>
                <td>@user.Email</td>
                <td>@user.Name</td>
                <td>@user.EfterName</td>
                <td>@user.Age</td>
                <td>@user.Register</td>
                <td><a asp-action="ShowUserRoles" asp-route-id="@user.Id" class="btn btn-info">User Roles</a>|
                <a asp-action="DeleteUser" asp-route-id="@user.Id" class="btn btn-danger">Delete user</a>  </td>
            </tr>
        }
    </tbody>
</table>
