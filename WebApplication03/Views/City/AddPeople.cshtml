
@{
    ViewData["Title"] = "Add People";
}

<h1>Add People to City</h1>
<br />
<h4>@ViewBag.Message</h4>
<form asp-action="AddPeople" method="post">
    <div class="form-group">

       <h4>Add Person to : @ViewBag.City </h4>
    </div>
    <div class="form-group">
        <label>Person</label>
        <select name="personId" class="form-control" asp-items="@ViewBag.People"></select>
    </div>
    <br />
    <input type="submit" value="Add To City" class="btn btn-success" asp-route-cityId="@ViewBag.Id" />
</form>
<br />
<br />
<a class="btn btn-info" asp-action="Index">Back to City List</a>